# SUPABASE CONFIGURATION
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# APPLICATION URLS
# Base URL for PDF generation and links
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Supabase Edge Function URL
SITE_URL=http://localhost:3000

# EMAIL CONFIGURATION (Gmail SMTP)
# Get app-specific password from: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL="Your Company" <noreply@yourdomain.com>

# ADMIN AUTHENTICATION
# Admin username (email)
ADMIN_USERNAME=admin@example.com

# Admin password (bcrypt hashed)
# Generate with: npx bcryptjs hash "your-password" 12
ADMIN_PASSWORD_BCRYPT=$2a$12$...

# Admin session secret (HMAC key for signing cookies)
# Generate with: openssl rand -hex 32
ADMIN_SESSION_SECRET=your-64-char-hex-string-here
ADMIN_SESSION_TTL_MINUTES=480

# IP whitelist for admin access (comma-separated, optional)
# Leave empty to disable IP filtering
ADMIN_IP_WHITELIST=

# CLOUDFLARE TURNSTILE (Bot Protection)
# Get keys from: https://dash.cloudflare.com/
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_site_key_here
TURNSTILE_SECRET_KEY=your_secret_key_here

# Footer in emails
COMPANY_NAME=Your Company Name