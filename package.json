{
  "name": "quiz-interface",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm --filter=quiz run build",
    "build:admin": "cd apps/admin && npm run build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "pdf": "node scripts/export-pdf.js --profile=CD",
    "generate:pdf-html": "tsx scripts/generate-pdf-html.ts",
    "embed-excel-config": "tsx scripts/embed-excel-config.ts",
    "disc:parity": "tsx analysis/excel_parity/run_parity_check.ts",
    "disc:report": "tsx analysis/excel_parity/run_parity_check.ts --report",
    "disc:test": "vitest run tests/disc_parity.spec.ts",
    "rapport:test": "vitest run tests/rapport-pdf-html.spec.ts",
    "seed:admins": "tsx scripts/seed-admins.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-pdf/renderer": "^4.3.0",
    "@supabase/supabase-js": "^2.57.4",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.0",
    "chartjs-node-canvas": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.543.0",
    "next": "^16.0.10",
    "nodemailer": "^7.0.6",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.2.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.5.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.0",
    "typescript": "^5",
    "typescript-eslint": "^8.50.0",
    "vitest": "^2.1.1"
  }
}
